application/pdf; mkdir -p /tmp/mutt\; cp %s /tmp/mutt\; zathura /tmp/mutt/"$(basename %s)" &;

image/png; mkdir -p /tmp/mutt \; cp %s /tmp/mutt \; eog /tmp/mutt/"$(basename %s)" &;
image/jpeg; mkdir -p /tmp/mutt \; cp %s /tmp/mutt \; eog /tmp/mutt/"$(basename %s)" &;

application/vnd.openxmlformats-officedocument.wordprocessingml.document; mkdir -p /tmp/mutt \; cp %s /tmp/mutt \; libreoffice /tmp/mutt/"$(basename %s)" &;
application/vnd.openxmlformats-officedocument.spreadsheetml.sheet; mkdir -p /tmp/mutt \; cp %s /tmp/mutt \; libreoffice /tmp/mutt/"$(basename %s)" &;
application/vnd.ms-excel; mkdir -p /tmp/mutt \; cp %s /tmp/mutt \; libreoffice /tmp/mutt/"$(basename %s)" &;

text/html; /usr/bin/html2text -style pretty -utf8 -width 100 %s; copiousoutput
