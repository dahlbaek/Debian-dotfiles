set mbox_type="Maildir"
set folder="~/Mail"
set mailcap_path="~/.mutt/mailcap"
set alias_file="~/.config/sensitive/mail/aliases.gpg"
source "gpg2 --decrypt ${alias_file} |"
source ~/.mutt/macros

mailboxes `printf '%s\n' ~/Mail/*/* | sed s/' '/'\\ '/ | tr '\n' ' '`

auto_view text/html
alternative_order text/plain text/html

set sort="reverse-threads"
set sort_aux="last-date-received"

set date_format="%Y-%m-%dT%H:%M:%S%Z"
set timeout="5"
set abort_unmodified="ask-yes"
set fast_reply="yes"
set forward_format="Fwd: %s"
set honor_disposition="yes"
set resolve="no"
set send_charset="us-ascii:utf-8:iso-8859-1"
set sig_on_top="yes"
set sleep_time="0"
set timeout="5"
set wait_key="no"

folder-hook '+AAU/*' 'source ~/.mutt/accounts/AAU'
folder-hook '+AU/*' 'source ~/.mutt/accounts/AU'
set spoolfile="+AAU/INBOX"

set sidebar_delim_chars='/'
set sidebar_visible=yes
set sidebar_width=25

bind index,pager \Cp sidebar-prev
bind index,pager \Cn sidebar-next
bind index,pager \Co sidebar-open
# bind index,pager \Cs sidebar-toggle-visible
