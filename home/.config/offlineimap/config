[general]
ui = ttyui
accounts = AU,AAU
pythonfile = ~/.config/offlineimap/offlineimap.py

[Account AU]
localrepository = AU-Local
remoterepository = AU-Remote

[Account AAU]
localrepository = AAU-Local
remoterepository = AAU-Remote

[Repository AU-Local]
type = Maildir
localfolders = ~/Mail/AU

[Repository AAU-Local]
type = Maildir
localfolders = ~/Mail/AAU

[Repository AU-Remote]
type = IMAP
# Collect sensitive data from the pythonfile
# remotehost = AUdomain.com
# remoteuser = myAUloginname
# remotepass = myAUpass
remotehosteval = remote("AUhost")
remoteusereval = remote("AUuser")
remotepasseval = remote("AUpass")
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder in ['INBOX', 'Kladder', 'Sendt post']

[Repository AAU-Remote]
type = IMAP
# Collect sensitive data from the pythonfile
# remotehost = AAUdomain.com
# remoteuser = myAAUloginname
remotehosteval = remote("AAUhost")
remoteusereval = remote("AAUuser")
remotepasseval = remote("AAUpass")
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder in ['INBOX', 'Kladder', 'Sendt post']
