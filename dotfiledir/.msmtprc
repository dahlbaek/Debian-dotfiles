account default
host hostdomain.com
port 587

auth login
user loginname
# Add the password to the system keyring, and let msmtp get it automatically. To set the keyring password using Gnome's libsecret:
# $ secret-tool store --label=msmtp host hostdomain.com service smtp user loginname

from username@domain.com

tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
